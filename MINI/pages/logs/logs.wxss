

/*局部样式*/
.slider,.slider image,.slider swiper{
  width: 100%;
  height: 390rpx; /*图片测量出的结果*/
}

.index-nav{
  display: flex;
  flex-wrap: wrap;
}

.index-nav .nav-item{
  height: 200rpx;
  width: 33.3333%;
  display: flex;
  flex-direction: column;     /*子元素按列*/
  justify-content: center;    /*水平居中*/
  align-items: center;        /*垂直居中*/
  box-sizing: border-box;
  font-size: 14px;
  border-bottom: 1rpx solid #ccc;
  /*border-right: 1rpx solid #ccc;*/
  position: relative;
}
