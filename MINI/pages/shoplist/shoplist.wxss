/* pages/shoplist/shoplist.wxss */

page{
    background-color: #fff;
}
/*商品项目*/
.shop{
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    position: relative;
}
.shop-img{
    height: 160rpx;
    width: 160rpx;
    margin-right: 20rpx;
}
.shop-info{
    display: flex;
    width: 520rpx;
    color: #666;
    font-size: 12px;
    flex-direction: column;
    line-height: 1.5;
}
.shop-title{
    font-size: 16px;
    color: #333;
    width: 380rpx;

}
.shop-start{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
