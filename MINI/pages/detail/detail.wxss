/* pages/detail/detail.wxss */
/*.slider image 图片默认值 320*240*/

.slider,.slider image,.slider swiper{
    width: 100%;
    height: 390rpx;
}
.shop-title{
    font-size: 16px;
    color: #333;
}

/*商品价格*/
.priceInfo .oldprice{
    color:#ccc;
    text-decoration: line-through;
    font-size: 14px;

}
.priceInfo .newprice{
    color: red;
    font-size: 17px;
    font-weight: bold;
}
/*arr*/
.arr{
    display: flex;
    flex-flow: column;

}
/*数量按钮*/
.tui-number-group{
    display: table;
    table-layout: fixed;
    width: 300rpx;
    text-align: center;
    border-radius: 6rpx;
    overflow: hidden;
    border: 1px solid #bbb;
}
.tui-number-cell{
    display: table-cell;
    line-height: 1.7;
    border-radius: 0;

}
button::after{
    border-bottom: none;
    border-top: none;
    border-radius: 0;
}
/*二个按钮*/
.addCart{
    background-color: #fc0;
    font-size: 14px;
}
.addOrder{
    background-color: #fc6;
    font-size: 14px;
}

