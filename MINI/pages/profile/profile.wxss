.avatar{
    height: 400rpx;
    background-color: #E2DC71;
    display: flex;
    justify-content: center;
    align-items: center;
}
.avatar image{
    width: 200rpx;
    height: 200rpx;
    border: 5rpx solid rgba(0,  0,0,.3);
    border-radius: 50%;
}

.cell{
    background-color: #fff;
    font-size: 16px;
}
.cell-item{
    border-bottom: 1rpx solid #ddd;
    padding: 30rpx 20rpx;
}